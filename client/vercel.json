{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "chmod +x ./node_modules/.bin/vite && npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production",
      "NODE_OPTIONS": "--max_old_space_size=4096"
    }
  }
} 